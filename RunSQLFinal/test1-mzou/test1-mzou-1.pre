mysqladmin -u root -p$1 -e "DROP DATABASE IF EXISTS mzou1"
mysqladmin -u root -p$1 -e "CREATE DATABASE mzou1"
mysqladmin -u root -p$1 -e "DROP DATABASE IF EXISTS mzou2"
